{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "types": [
      "jest"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
    },
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.spec.ts"
  ]
}